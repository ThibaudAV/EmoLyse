<div class="jumbotron">
    <h1>EmoLyse</h1>
    <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#newExp">
        <span class="glyphicon glyphicon-file"></span> Nouvelle expérience
    </button>
    <button type="button" class="btn btn-default btn-lg btn-block" onclick="$('#openExp').modal('toggle')">
        <span class="glyphicon glyphicon-folder-open"></span> Ouvrir une expérience
    </button>
</div>


<!-- Modal nouvelle experience-->
    <div class="modal" id="newExp" tabindex="-1" role="dialog" aria-labelledby="newExpLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/newExperience" method="post" role="form" enctype="multipart/form-data">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="newExpLabel">Nouvelle expérience</h4>
                    </div>
                    <div class="modal-body" style="padding-bottom: 0px;">

                        <div class="form-group">
                            <label for="nomExpInput">Nom de l'expérience</label>
                            <input name="nomExp" type="text" class="form-control" id="nomExpInput" placeholder="Entrer nom">
                        </div>

                        <div class="form-group">
                            <label for="descriptionExpInput">Description</label>
                            <textarea name="descriptionExp" class="form-control" rows="3" id="descriptionExpInput"></textarea>

                        </div>

                        <div class="form-group">
                            <label for="configSelect">Choisir une configuration</label>
                            <select name="configExp" class="form-control" id="configSelect">
                                <% for(var i=0; i<configs.length; i++) {%>
                                   <option value="<%= configs[i].ID %>"><%= configs[i].titre %></option>
                                <% } %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="imageInputFile">Image du produit <span class="text-warning">( png, jpg, jpeg )</span></label>
                            <input name="imageExp" type="file" id="imageInputFile" accept="image/*">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary" onclick="$('#newExp').modal('hide');$('form').submit();">Valider</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Ouvrir Experience -->
    <div class="modal " id="openExp" tabindex="-1" role="dialog" aria-labelledby="openExpLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/openExperience" method="post" role="form">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="openExpLabel">Ouvrir expérience</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="experienceSelect">Choisir une expérience</label>
                            <select name="experience" class="form-control" id="experienceSelect" style="width: 100%">
                                <% for(var i=0; i<experiences.length; i++) {%>
                                   <option value="<%= experiences[i].ID %>"><%= experiences[i].nom %></option>
                                <% } %>
                            </select>
                            <p class="help-block"><a href="listeExperiences">Importer une expérience</a></p>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary" onclick="$('#openExp').modal('hide');$('form').submit();">Ouvrir</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
