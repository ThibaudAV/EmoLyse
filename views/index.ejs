<% if(error) { %>
<%= error %>
<% } %>
<div class="jumbotron">
    <h1>EmoLyse</h1>
    <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#myModal">
        <span class="glyphicon glyphicon-file"></span> Nouvelle experience
    </button>
    <button type="button" class="btn btn-default btn-lg btn-block">
        <span class="glyphicon glyphicon-folder-open"></span> Ouvrir une experience
    </button>
</div>


<!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/nouvExperience" method="post" role="form">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">



                        <div class="form-group">
                            <label for="nomExpInput">Nom experience</label>
                            <input name="nomExp" type="text" class="form-control" id="nomExpInput" placeholder="Enter nom">
                        </div>
                        <div class="form-group">
                            <label for="descriptionExpInput">Description</label>
                            <textarea name="descriptionExp" class="form-control" rows="3" id="descriptionExpInput"></textarea>

                        </div>

                        <div class="checkbox">
                            <label>
                                <input name="" type="checkbox"> Check me out
                            </label>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Valider</button>
                    </div>
                </form>
            </div>
        </div>
    </div>