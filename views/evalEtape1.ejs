
<div class="row">
    <div class="col-md-12 main">
        <img src="public/images/background.png">
        <div class="objEval">
            <%- (experience.imageExp) ? '<img src="EXPERIENCES/'+experience.ID +'/'+experience.imageExp+'">' : '<img src="public/images/objEval.jpg">'  %>
        </div>
        <div class="zoneEvalE1">


            <a href="#wheel" class="wheel-button btn btn-primary btn-lg" role="button"><span class="glyphicon glyphicon-th-large"></span></a>
            <ul id="wheel">
              <% for(var i=0; i<experience.configuration.emotions.length; i++) { %>
                <li class="item"><a class="btn btn-primary btn-lg linkEmotion" href="#" data-href="/expEtape2?id=<%= participant.ID %>&emotion=<%= experience.configuration.emotions[i].ID %>"><%= experience.configuration.emotions[i].nom %></a></li>
              <% } %>
            </ul>
        </div>
    </div>
</div>



<!-- Modal Bienvenu-->
    <div class="modal" id="HelpModal" tabindex="-1" role="dialog" aria-labelledby="HelpModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="HelpModalLabel">Bonjour,</h4>
            </div>
            <div class="modal-body">
              <%- preferences.textNouvelleEval  %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Commencer</button>
            </div>
          </div>
        </div>
    </div>





<script type="text/javascript">

  $(document).ready(function () {


  <% if(showModalHelp) { %>
      $('#HelpModal').modal('show');
      //$('#myModal').modal('toggle')
  <% } %>

    $(".wheel-button").wheelmenu({
      trigger: "click",
      animation: "fly",
      animationSpeed: "fast",
      angle: 'all'
    });
    $(".zoneEvalE1").on('click', '.linkEmotion', function(event) {
      event.preventDefault();
      startTime = new Date();
      window.location.href = $(this).attr('data-href')+"&startTime="+startTime.getTime();
    });
  });



</script>